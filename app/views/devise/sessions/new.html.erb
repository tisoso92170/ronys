<section class="hero is-white is-fullheight">
        <div class="hero-body">
            <div class="container has-text-centered">
                <div class="column is-4 is-offset-4">
                    <h3 class="title has-text-black">Auroranys</h3>
                    <hr class="login-hr">
                    <p class="subtitle has-text-black"> Sil vous pla√Æy connectez vous.</p>
                    <div class="box">
                      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                            <div class="field">
                                <div class="control">
                                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: "Entre votre email" %>
                                </div>
                            </div>

                            <div class="field">
                                <div class="control">
                                  <%= f.password_field :password, autocomplete: "current-password", class: "input", placeholder: "Entre votre mot de passe" %>
                                </div>
                            </div>
                            <% if devise_mapping.rememberable? %>
                                <div class="control">
                                  <%= f.check_box :remember_me,  class: "styled" %>
                                        Se souvenir de moi !
                                </div>
                            <% end %>
                                <%= f.submit "Se connecter", class: "button is-block is-danger is-large is-fullwidth"  %>
                      <% end %>
                    </div>
                    <div class="has-text-grey">
                      <%= render "devise/shared/links" %>
                    </div>
                </div>
            </div>
        </div>
    </section>
